@{
}


@{
    string message = Convert.ToString(TempData["Message"] ?? string.Empty);
    var isSuccess = Convert.ToBoolean(TempData["isSuccess"] ?? false);
}
@if (Convert.ToBoolean(TempData["isSuccess"]))
{
    <div id="divAlert" class="alert alert-@(isSuccess ? "success" : "danger")" role="alert">
        @message
    </div>
}
<div class="card align-items-center" style="width: 18rem;">
    <div class="card-body">
        <form class="row g-3" method="post" action="/Wallet/Transfer">

            <div class="col-md-12">
                <label for="FromMobileNo" class="form-label">From</label>
                <input type="text" name="FromMobileNo" class="form-control" id="FromMobileNo" required>
            </div>

            <div class="col-md-12">
                <label for="ToMobileNo" class="form-label">To</label>
                <input type="text" name="ToMobileNo" class="form-control" id="ToMobileNo" required>
            </div>

            <div class="col-md-12">
                <label for="Amount" class="form-label">Amount</label>
                <input type="text" name="Amount" class="form-control" id="Amount" required>
            </div>

            <div>
                <a href="/Wallet/Index type="button" class="btn btn-outline-warning">Cancel</a>
                <button type="submit" class="btn btn-outline-primary float-end">Transfer</button>
            </div>

        </form>
    </div>
</div>
