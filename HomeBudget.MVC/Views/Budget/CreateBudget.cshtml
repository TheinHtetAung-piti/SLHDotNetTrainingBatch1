@{
    ViewData["WalletUserName"] = "New Wallet";
    ViewData["Test"] = "heehee";
}
<h1>New Budget</h1>

<form method="post" action="/Budget/Create">
    <div class="mb-3">
        <label for="BudgetName" class="form-label">Budget Name</label>
        <input type="text" name="Name" class="form-control" id="BudgetName">
    </div>
    <div class="mb-3">

        <label for="Amount" class="form-label">Amount</label>
        <input type="text" name="Amount" class="form-control" id="Amount">
    </div>
    <a href="/Budget/Index" type="button" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-success" id="btnSave">Create</button>
</form>
